<Window x:Class="EMP_FrontEND.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMP_FrontEND"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800" Background="Black">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Red" />
                <Setter Property="Background" Value="Black"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Margin" Value="10,15,0,0"></Setter>
            </Style>
        </StackPanel.Resources>

        <Button Click="Click_NewEmployee">Neuer Mitarbeiter</Button>
        <Button Click="Click_Show_Employee" Content="Mitarbeiter Anzeigen"/>
        <Button Click="Click_Delete" Content="Mitarbeiter Löschen"/>
        <Button Click="Click_Save" Content="Speichern"/>
        <Button Content="Beenden" Click="Button_Click"/>

    </StackPanel>




</Window>
